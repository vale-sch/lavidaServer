{
  "version": 2,
  "builds": [{ "src": "api/**/*.ts", "use": "@vercel/node" }],
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "/api/.*",
      "dest": "/api/index.ts",
      "methods": ["GET", "POST"],
      "headers": {
        "Access-Control-Allow-Origin": "http://127.0.0.1:5500/" 
      }
    }
  ]
}
